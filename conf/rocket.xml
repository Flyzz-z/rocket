      <port>12345</port>
    </service>
    -->
  </services>

	<etcd>
		<ip>127.0.0.1</ip>
		<port>2379</port>
		<timeout>1000</timeout>
		<username>root</username>
		<password>123456</password>
	</etcd>


  <!-- 客户端调用的下游服务配置(用于服务发现) -->
